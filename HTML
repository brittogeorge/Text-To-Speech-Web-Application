<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Text To Speech</title>
    <link rel="stylesheet" href="../css/style.css" />
  </head>
  <body>
    <div id="container">
      <h1>Text 2 Speech</h1>
      <br />
      <textarea id="text2"></textarea><br />
      <button onclick="speak()">Text To Speak</button>
    </div>

    <script>
      var speech = new SpeechSynthesisUtterance();
      function speak() {
        speech.text = text2.value;

        speech.rate = 0.9;
        speech.volume = 200;
        speech.pitch = 1;

        window.speechSynthesis.speak(speech);
      }
    </script>
  </body>
</html>
